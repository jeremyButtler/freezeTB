LD=link
CC=cl
CFLAGS= /O2 /Ot /Za /Tc
PREFIX="%ProgramFiles%\freezeTB"
DB_PREFIX="%PUBLIC%\Documents";
ext=win
O=.o.$(ext)

all:
	cd programs
	nmake CC="$(CC)" LD="$(LD)" CFLAGS="$(CFLAGS)" /F mkfile.$(ext)
	cd ..

install:
	move programs\guiFreezeTB\guiFreezeTB.exe "$(PREFIX)"
	move programs\freezeTBSrc\freezeTB.exe "$(PREFIX)"
	copy scripts\freezeTBGui.Rscript "$(PREFIX)"

clean:
	cd programs
	nmake /F mkfile.$(ext) clean
	cd ..
